{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "target",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
